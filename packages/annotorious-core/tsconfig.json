{
  "compilerOptions": {
    "baseUrl": ".",
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": false,
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "paths": { "@/*": ["src/*"] },
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "sourceMap": true,
    "target": "ESNext",
    "verbatimModuleSyntax": true
  },
  "include": ["./src/**/*", "./test/**/*"],
  "exclude": ["node_modules", "dist"]
}